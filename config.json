{
  "audio": "pulseaudio",
  "bootloader": "grub-install",
  "harddrives": [
    "/dev/__DRIVE__"
  ],
  "hostname": "__HOSTNAME__",
  "kernels": [
    "linux"
  ],
  "keyboard-layout": "us",
  "mirror-region": {
    "Worldwide": {
      "https://mirror.rackspace.com/archlinux/$repo/os/$arch": true
    }
  },
  "ntp": true,
  "packages": [
    "gdm",
    "i3-wm",
    "fish",
    "vim",
    "alacritty",
    "tmux",
    "ranger",
    "tig",
    "cgdb",
    "jq",
    "network-manager-applet"
  ],
  "profile": "i3",
  "script": "guided",
  "swap": true,
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "timezone": "Europe/London",
  "custom-commands": [
    "./install-dotfiles.sh"
  ]
}
